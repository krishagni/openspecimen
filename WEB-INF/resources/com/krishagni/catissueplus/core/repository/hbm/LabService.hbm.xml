<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.biospecimen.domain.LabService" table="OS_LAB_SERVICES"
    entity-name="com.krishagni.catissueplus.core.biospecimen.domain.LabService">

    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_LAB_SERVICES_SEQ</param>
      </generator>
    </id>

    <property name="code" column="CODE" not-null="true" />

    <property name="description" column="DESCRIPTION" not-null="true" />

    <property name="activityStatus" column="ACTIVITY_STATUS" not-null="true" />

    <set name="serviceRates" table="OS_LAB_SERVICE_RATES" inverse="true" batch-size="100">
      <key column="SERVICE_ID" />
      <one-to-many class="com.krishagni.catissueplus.core.biospecimen.domain.LabServiceRate" />
    </set>

    <filter name="activeEntity" />

    <query name="getServiceRates">
      select
        rl, sr.rate
      from
        com.krishagni.catissueplus.core.biospecimen.domain.LabService s
        join s.serviceRates sr
        join sr.rateList rl
      where
        s.id = :serviceId
      order by
        rl.startDate desc
    </query>

    <sql-query name="getRateListsCount">
      <return-scalar column="service_id" type="long" />
      <return-scalar column="rate_lists_count" type="long" />

      select
        sr.service_id as service_id, count(sr.rate_list_id) as rate_lists_count
      from
        os_lab_service_rates sr
        inner join os_lab_services_rate_lists rl on rl.identifier = sr.rate_list_id
      where
        rl.activity_status != 'Disabled' and
        sr.service_id in (:serviceIds)
      group by
        sr.service_id
    </sql-query>
  </class>
</hibernate-mapping>