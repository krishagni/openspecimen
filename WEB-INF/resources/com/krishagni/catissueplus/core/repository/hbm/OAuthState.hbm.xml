<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.auth.domain.OAuthState" table="OS_OAUTH_STATES"
    entity-name="com.krishagni.catissueplus.core.auth.domain.OAuthState">

    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_OAUTH_STATES_SEQ</param>
      </generator>
    </id>

    <property name="state" column="STATE" />

    <many-to-one name="domain" column="DOMAIN_ID" />

    <property name="verifier" column="VERIFIER" />

    <property name="challenge" column="CHALLENGE" />

    <property name="time" column="AUTH_TIME" />

    <query name="deleteOldStates">
      <![CDATA[
        delete from
          com.krishagni.catissueplus.core.auth.domain.OAuthState s
        where
          s.time < :staleTime
      ]]>
    </query>
  </class>
</hibernate-mapping>