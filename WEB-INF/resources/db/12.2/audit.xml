<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="vpawar" id="CP based specimen services">
    <createTable tableName="OS_CP_SERVICES_AUD">
      <column name="IDENTIFIER" type="${int.type}" />
      <column name="REV" type="${int.type}" />
      <column name="REVTYPE" type="${smallint.type}" />
      <column name="CODE" type="${text.type}(32)" />
      <column name="code_MOD" type="${boolean.type}" />
      <column name="DESCRIPTION" type="${text.type}(255)" />
      <column name="description_MOD" type="${boolean.type}" />
      <column name="CP_ID" type="${int.type}" />
      <column name="cp_MOD" type="${boolean.type}" />
      <column name="ACTIVITY_STATUS" type="${text.type}(16)" />
      <column name="activityStatus_MOD" type="${boolean.type}" />
    </createTable>
  </changeSet>

  <changeSet author="vpawar" id="CP specimen service rates">
    <createTable tableName="OS_CP_SERVICE_RATES_AUD">
      <column name="IDENTIFIER" type="${int.type}" />
      <column name="REV" type="${int.type}" />
      <column name="REVTYPE" type="${smallint.type}" />
      <column name="SERVICE_ID" type="${int.type}" />
      <column name="service_MOD" type="${boolean.type}" />
      <column name="START_DATE" type="${date.type}" />
      <column name="startDate_MOD" type="${boolean.type}" />
      <column name="END_DATE" type="${date.type}" />
      <column name="endDate_MOD" type="${boolean.type}" />
      <column name="RATE" type="${decimal.type}(10, 2)" />
      <column name="rate_MOD" type="${boolean.type}" />
      <column name="ACTIVITY_STATUS" type="${text.type}(16)" />
      <column name="activityStatus_MOD" type="${boolean.type}" />
    </createTable>
  </changeSet>

  <changeSet author="vpawar" id="Anticipated specimen services">
    <createTable tableName="OS_CP_SR_SERVICES_AUD">
      <column name="IDENTIFIER" type="${int.type}" />
      <column name="REV" type="${int.type}" />
      <column name="REVTYPE" type="${smallint.type}" />
      <column name="SR_ID" type="${int.type}" />
      <column name="requirement_MOD" type="${boolean.type}" />
      <column name="SERVICE_ID" type="${int.type}" />
      <column name="service_MOD" type="${boolean.type}" />
      <column name="UNITS" type="${int.type}" />
      <column name="units_MOD" type="${boolean.type}" />
    </createTable>
  </changeSet>

  <changeSet author="vpawar" id="Specimen services">
    <createTable tableName="OS_SPECIMEN_SERVICES_AUD">
      <column name="IDENTIFIER" type="${int.type}" />
      <column name="REV" type="${int.type}" />
      <column name="REVTYPE" type="${smallint.type}" />
      <column name="SPECIMEN_ID" type="${int.type}" />
      <column name="specimen_MOD" type="${boolean.type}" />
      <column name="SERVICE_ID" type="${int.type}" />
      <column name="service_MOD" type="${boolean.type}" />
      <column name="UNITS" type="${int.type}" />
      <column name="units_MOD" type="${boolean.type}" />
      <column name="SERVICE_DATE" type="${nullable.ts.type}" />
      <column name="serviceDate_MOD" type="${boolean.type}" />
      <column name="SERVICED_BY" type="${int.type}" />
      <column name="servicedBy_MOD" type="${boolean.type}" />
      <column name="COMMENTS" type="${text.type}(255)" />
      <column name="comments_MOD" type="${boolean.type}" />
    </createTable>
  </changeSet>
</databaseChangeLog>