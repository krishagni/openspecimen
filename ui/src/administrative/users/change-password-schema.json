{
  "rows": [
    {
      "fields": [
        {
          "type": "password",
          "label": "Old Password",
          "name": "oldPassword",
          "showWhen": "this.fd('userId') == this.fd('currentUser').id",
          "validations": {
            "required": {
              "message": "Old password is mandatory"
            }
          }
        }
      ]
    }, 
    {
      "fields": [
        {
          "type": "password",
          "label": "New Password",
          "name": "newPassword",
          "validations": {
            "required": {
              "message": "New password is mandatory"
            }
          }
        }
      ]
    }, 
    {
      "fields": [
        {
          "type": "password",
          "label": "Confirm Password",
          "name": "confirmNewPassword",
          "validations": {
            "required": {
              "message": "Confirm password is mandatory"
            },
            "sameAs": {
              "field": "newPassword",
              "message": "Passwords do not match"
            }
          }
        }
      ]
    } 
  ]
}
